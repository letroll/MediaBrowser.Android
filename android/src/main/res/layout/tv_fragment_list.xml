<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/gvContent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        tools:listitem="@layout/widget_season_tile" />

    <TextView
        android:id="@+id/tvMediaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/gvContent"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="false"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvTitleSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvMediaTitle"
        android:layout_alignStart="@+id/tvMediaTitle"
        android:layout_below="@+id/tvMediaTitle"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/tvMediaOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvTitleSubText"
        android:layout_alignStart="@+id/tvTitleSubText"
        android:layout_below="@+id/tvTitleSubText"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:scrollbars="vertical"
        android:textSize="20sp" />
</RelativeLayout>